<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banner"
    tools:context=".ConfiguracaoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imvIcone2"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

        <TextView
            android:id="@+id/txtJanelaConfigurações"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:text="Configurações"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/lblIpServidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Ip do Servidor" />

        <EditText
            android:id="@+id/txtIpServidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="" />

        <TextView
            android:id="@+id/lblPorta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Porta" />

        <EditText
            android:id="@+id/txtPorta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="" />

        <TextView
            android:id="@+id/lblTemporizadorMensagemServidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intervalo em segundos para o envio de mensagens" />

        <EditText
            android:id="@+id/txtTemporizadorMensagemServidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time"
            android:text="" />

        <TextView
            android:id="@+id/lblUrlUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Url dos Usuários" />

        <EditText
            android:id="@+id/txtUrlUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="" />

        <TextView
            android:id="@+id/lblUrlMensagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Url das Mensagens" />

        <EditText
            android:id="@+id/txtUrlMensagens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textUri"
            android:text="" />

        <Button
            android:id="@+id/btnSalvaPreferenciasConfiguracao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Salvar"
            android:textColor="#ffffff"
            android:background="#275975"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>